{
  "name": "emapc",
  "version": "0.0.0-development",
  "description": "The EMAPC (EinsatzMonitor-Alarm-PDF-Converter) provides a toolset to convert an incoming alarm PDF into a format that can be read by the EinsatzMonitor.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint --fix && shx rm -rf dist",
    "build": "tsc && npm run typeonly",
    "postbuild": "shx chmod +x dist/cli.js",
    "typeonly": "typeonly --bundle dist/config/config-types.to.json src/config/config.d.ts",
    "semantic-release": "semantic-release",
    "start": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter.git"
  },
  "keywords": [
    "einsatzmonitor",
    "pdf"
  ],
  "author": "Matthias Hecht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter/issues"
  },
  "homepage": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@trace-it/lowdb-adapter": "^1.0.0",
    "@trace-it/types": "^2.0.0",
    "@types/node": "^14.6.4",
    "@types/shelljs": "^0.8.8",
    "@types/yamljs": "^0.2.31",
    "eslint": "^7.12.1",
    "semantic-release": "^17.3.1",
    "shx": "^0.3.2",
    "trace-it": "^1.0.0",
    "ts-node": "^9.0.0",
    "typeonly": "^0.4.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@typeonly/validator": "^0.5.1",
    "chokidar": "^3.4.2",
    "shelljs": "^0.8.4",
    "yamljs": "^0.3.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./compileCli.sh && ./compileRunner.sh && ./makeInstaller.sh ${nextRelease.gitHead} ${nextRelease.gitTag}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "bin/cli/linux/emapc32",
              "name": "emapc-cli-linux-x32",
              "label": "Linux-x32 binary cli"
            },
            {
              "path": "bin/cli/linux/emapc64",
              "name": "emapc-cli-linux-x64",
              "label": "Linux-x64 binary cli"
            },
            {
              "path": "bin/cli/win/emapc32.exe",
              "name": "emapc-cli-win-x32.exe",
              "label": "Windows-x32 binary cli"
            },
            {
              "path": "bin/cli/win/emapc64.exe",
              "name": "emapc-cli-win-x64.exe",
              "label": "Windows-x64 binary cli"
            },
            {
              "path": "bin/cli/macos/emapc64",
              "name": "emapc-cli-macos-x64",
              "label": "Macos-x64 binary cli"
            },
            {
              "path": "bin/srv/linux/emapc32",
              "name": "emapc-srv-linux-x32",
              "label": "Linux-x32 binary service"
            },
            {
              "path": "bin/srv/linux/emapc64",
              "name": "emapc-srv-linux-x64",
              "label": "Linux-x64 binary service"
            },
            {
              "path": "bin/srv/win/emapc32.exe",
              "name": "emapc-srv-win-x32.exe",
              "label": "Windows-x32 binary service"
            },
            {
              "path": "bin/srv/win/emapc64.exe",
              "name": "emapc-srv-win-x64.exe",
              "label": "Windows-x64 binary service"
            },
            {
              "path": "bin/srv/macos/emapc64",
              "name": "emapc-srv-macos-x64",
              "label": "Macos-x64 binary service"
            },
            {
              "path": "install-linux32.sh",
              "name": "install-linux32.sh",
              "label": "Linux-x32 service installer"
            },
            {
              "path": "install-linux64.sh",
              "name": "install-linux64.sh",
              "label": "Linux-x64 service installer"
            },
            {
              "path": "install-win32.ps1",
              "name": "install-win32.ps1",
              "label": "Windows-x32 service installer"
            },
            {
              "path": "install-win64.ps1",
              "name": "install-win64.ps1",
              "label": "Windows-x64 service installer"
            }
          ]
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
