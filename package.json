{
  "name": "emapc",
  "version": "0.0.0-development",
  "description": "The EMAPC (EinsatzMonitor-Alarm-PDF-Converter) provides a toolset to convert an incoming alarm PDF into a format that can be read by the EinsatzMonitor.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter.git"
  },
  "keywords": [
    "einsatzmonitor",
    "pdf"
  ],
  "author": "Matthias Hecht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter/issues"
  },
  "homepage": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/node": "^14.6.4",
    "@types/shelljs": "^0.8.8",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "shelljs": "^0.8.4"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      {
        "name": "dev",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./compile.sh"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "bin/linux/32/emapc",
              "name": "emapc-linux-x32",
              "label": "Linux-x32 binary"
            },
            {
              "path": "bin/linux/64/emapc",
              "name": "emapc-linux-x64",
              "label": "Linux-x64 binary"
            },
            {
              "path": "bin/win/32/emapc.exe",
              "name": "emapc-win-x32.exe",
              "label": "Windows-x32 binary"
            },
            {
              "path": "bin/win/64/emapc.exe",
              "name": "emapc-win-x32.exe",
              "label": "Windows-x64 binary"
            },
            {
              "path": "bin/macos/64/emapc",
              "name": "emapc-macos-x64",
              "label": "Macos-x64 binary"
            }
          ]
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
