{
  "name": "emapc",
  "version": "0.0.0-development",
  "description": "The EMAPC (EinsatzMonitor-Alarm-PDF-Converter) provides a toolset to convert an incoming alarm PDF into a format that can be read by the EinsatzMonitor.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint --fix",
    "build": "tsc && npm run jsonSchemaCompilation",
    "jsonSchemaCompilation": "typescript-json-schema src/config/config.d.ts --required --defaultProps --strictNullChecks Config -o dist/config/schema.json",
    "jsonSchemaCompilation:dev": "typescript-json-schema src/config/config.d.ts --required --defaultProps --strictNullChecks Config -o src/config/schema.json",
    "semantic-release": "semantic-release",
    "start": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter.git"
  },
  "keywords": [
    "einsatzmonitor",
    "pdf"
  ],
  "author": "Matthias Hecht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter/issues"
  },
  "homepage": "https://github.com/matzehecht/EinsatzMonitor-Alarm-PDF-Converter#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/node": "^14.6.4",
    "@types/yamljs": "^0.2.31",
    "eslint": "^7.12.1",
    "nexe": "^3.3.7",
    "semantic-release": "^17.3.7",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "typescript-json-schema": "^0.48.0"
  },
  "dependencies": {
    "@trace-it/lowdb-adapter": "^1.0.0",
    "ajv": "^6.12.6",
    "chokidar": "^3.4.2",
    "rxjs": "^6.6.3",
    "trace-it": "^1.0.0",
    "yamljs": "^0.3.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
